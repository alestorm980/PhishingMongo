extends ./layout.jade
block contenido
  
  h1 User 
  h2
    a(href="/Add/addUser") Create User
  form(action="/user/search",method="POST" )
    input(type="text",name="search",placeholder="Search",id="search",class="form-control")
    div(class="row top-space")
       div(class="col-xs-12 col-sm-6")
         input(type="submit" value="Search" class="btn btn-info")
    

  
    
  div(class="container")       
    for user in users
      div
        .white.border.tr.large-padding
          .row
            .col-md-10
              h4 Name: #{user.name} LastName: #{user.lastname} Identification: #{user.identification} Address: #{user.address}
              .col-md-2
            
                  a(href="/edit/editUser/#{user._id}" ) Edit   
                  a(href="/delete/user/#{user._id}" class="right-space" ) Delete   
            
        
