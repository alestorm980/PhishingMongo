extends .././layout.jade
block contenido

    form(action="/edit/editAccount/#{account._id}" method="POST" )
      div(class="form-group")
        label(for="username") Username
        input(type="text",name="username",value="#{account.username}",id="username",class="form-control")


      div
        label(for="password") Password
        input(type="text",name="password",value="#{account.password}",id="password",class="form-control")


      div
        label(for="page") Page
        select(id="page" name="page" class="form-control")
            option(value="#{account.ownerPage.name}") #{account.ownerPage.name}
            for page in pages
              if (account.ownerPage.name != page.name)
                  option(value="#{page.name}") #{page.name}
          
            


        div
          label(for="user") User
          select(id="user" name="user" class="form-control")
            option(value="#{account.ownerUser.name}") #{account.ownerUser.name}
            for user in users
              if (account.ownerUser.name != user.name)
                option(value="#{user.name}") #{user.name}
      
        div
          label(for="ischanged") isChanged
          input(type="checkbox",name="ischanged",value="#{account.isChanged}",id="ischanged",class="form-control")  


        div(class="row top-space")
          div(class="col-xs-12 col-sm-6")
            input(type="submit" value="Guardar" class="btn btn-info")
